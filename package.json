{
  "name": "asistencia",
  "version": "5.0.0",
  "description": "Utilidad para el control y supervisi√≥n de la asistencia de empleados",
  "main": "main.js",
  "scripts": {
    "build:verbose": "electron-builder --dir --publish never --verbose",
    "pack": "electron-builder --dir --verbose",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win" , 
    "dist:mac": "electron-builder --mac"
  },
  "author": "",
  "license": "ISC",
  "keywords": [],
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.13.3" 
  },
  "dependencies": {
    "firebase": "^10.8.0",
    "firebase-admin": "^12.0.0",
    "node-notifier": "^10.0.1",
    "openai": "^4.29.2"
  },
  "build": {
    "files": [
      "**/*",
  "!**/*.map",
  "assets/**/*"
    ],
    "appId": "com.iniciativaselebi.asistencia",
    "productName": "Asistencia",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons/"
    }
    
    
  }
  
}
